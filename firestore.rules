rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isRole(role) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    function isClient() {
      return isRole('client');
    }

    function isCarWashOwner(carWashId) {
      let carWash = get(/databases/$(database)/documents/car_washes/$(carWashId));
      return isSignedIn() && carWash.data.ownerId == request.auth.uid;
    }

    // Users Collection
    // - Only the user themselves can read or update their own profile.
    // - Admins can read any user profile.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow get: if isRole('admin');
      allow create: if isOwner(userId);
      // No one can list all users or delete a user.
      allow list, delete: if false;
    }

    // Car Washes Collection (car_washes)
    // - Anyone can read car wash listings.
    // - Only the owner of the car wash can update it.
    match /car_washes/{carWashId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isCarWashOwner(carWashId);
      allow delete: if false; // Soft deletes should be used.

      match /reviews/{reviewId} {
        allow get, list: if true;
        allow create: if isClient() &&
          exists(/databases/$(database)/documents/car_washes/$(carWashId)/bookings/$(request.resource.data.bookingId)) &&
          get(/databases/$(database)/documents/car_washes/$(carWashId)/bookings/$(request.resource.data.bookingId)).data.clientId == request.auth.uid &&
          get(/databases/$(database)/documents/car_washes/$(carWashId)/bookings/$(request.resource.data.bookingId)).data.status == 'completed';
        allow update, delete: if false; // Reviews are immutable.
      }

      match /bookings/{bookingId} {
        allow get: if isCarWashOwner(carWashId) || isOwner(resource.data.clientId);
        allow list: if isCarWashOwner(carWashId);
        allow create: if isClient() && request.resource.data.clientId == request.auth.uid;
        allow update: if isCarWashOwner(carWashId) || isOwner(resource.data.clientId);
        allow delete: if isCarWashOwner(carWashId) || isOwner(resource.data.clientId);
      }
    }
  }
}
